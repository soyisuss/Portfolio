---
// Organización por categorías
const skills = {
  Lenguajes: ["Python", "JavaScript"],
  "Frameworks / Librerías": [
    "Astro",
    "Tailwind CSS",
    "Pandas",
    "Streamlit",
    "XGBoost",
    "OpenAI API",
  ],
  "Herramientas y Plataformas": ["Git", "Linux"],
};
---

<section class="bg-background-alt px-6 py-16">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl md:text-4xl font-semibold text-accent mb-8 text-center">
      Habilidades Técnicas
    </h2>

    <div class="space-y-8">
      {
        Object.entries(skills).map(([category, items]) => (
          <div>
            <h3 class="text-xl font-medium text-text-heading mb-4">
              {category}
            </h3>
            <div class="flex flex-wrap gap-4">
              {items.map((skill) => (
                <span class="bg-background-hover hover:bg-accent hover:text-white text-text-main px-4 py-2 rounded-full shadow transition">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
