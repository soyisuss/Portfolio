---
// Organización por categorías
const skills = [
  "Python",
  "JavaScript",
  "Astro",
  "Tailwind CSS",
  "XGBoost",
  "Pandas",
  "Streamlit",
  "OpenAI API",
  "Git",
  "Linux",
];
---

<section class="bg-background-alt px-6 py-16">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-2xl md:text-4xl font-semibold text-accent mb-8">
      Habilidades Técnicas
    </h2>
    <div class="flex flex-wrap justify-center gap-4">
      {
        skills.map((skill) => (
          <span class="text-sm md:text-base bg-background-hover hover:bg-accent hover:text-white text-text-main px-4 py-2 rounded-full shadow transition">
            {skill}
          </span>
        ))
      }
    </div>
  </div>
</section>
