---
const education = [
  {
    institution: "Instituto Tecnológico [Nombre]",
    degree: "Ingeniería en Inteligencia Artificial",
    period: "2021 – Presente",
    description:
      "Formación enfocada en modelos de aprendizaje automático, visión por computadora, redes neuronales, ética en IA y desarrollo de sistemas inteligentes.",
  },
];
---

<section class="bg-background px-6 py-16">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-2xl md:text-4xl font-semibold text-accent mb-8 text-center">
      Educación
    </h2>

    {
      education.map((item) => (
        <div class="bg-background-alt p-6 rounded-xl shadow-lg">
          <h3 class="text-xl text-accent font-bold mb-2">{item.degree}</h3>
          <p class="text-md text-text-muted mb-3">
            {item.institution} &bull; {item.period}
          </p>
          <p class="text-base text-text-main leading-relaxed">
            {item.description}
          </p>
        </div>
      ))
    }
  </div>
</section>
