---
const {
  title,
  description,
  year,
  tech = [],
  role,
  status,
  github,
  award,
} = Astro.props;
---

<div
  class="bg-background-alt border border-border rounded-xl p-6 shadow-lg hover:shadow-xl hover:bg-background-hover transition duration-300"
>
  <div class="flex justify-between items-start mb-2">
    <h3 class="text-lg text-accent font-semibold">{title}</h3>
    {award && <span class="text-yellow-400">ğŸ†</span>}
  </div>

  <p class="text-xs text-text-muted mb-1">{role}</p>
  <p class="text-sm text-text-muted mb-3">{year}</p>

  <p class="text-sm text-text-main leading-relaxed mb-4">{description}</p>

  <div class="flex flex-wrap gap-2 mb-4">
    {
      tech.map((tag: string) => (
        <span class="text-xs bg-accent text-white px-2 py-1 rounded-full hover:bg-accent-hover transition">
          {tag}
        </span>
      ))
    }
  </div>

  <div class="flex justify-between items-center">
    <span
      class={`text-xs px-2 py-1 rounded-full ${
        status === "ğŸ† 1er Lugar"
          ? "bg-yellow-400 text-black"
          : status === "En Desarrollo"
            ? "bg-blue-500 text-white"
            : "bg-green-500 text-white"
      }`}
    >
      {status}
    </span>

    {
      github && (
        <a
          href={github}
          target="_blank"
          class="text-accent hover:text-accent-hover transition text-sm"
        >
          Ver en GitHub â†’
        </a>
      )
    }
  </div>
</div>
